.wz_set {
  overflow: hidden;
  white-space: nowrap;
  -o-text-overflow: ellipsis;
  text-overflow: ellipsis;
  word-break: break-all;
  word-wrap: normal;
}
.nl_c {
  background: #fff;
}

.c_box {
  padding: 0 40rpx;
  padding-top: 70rpx;
}

.c_title {
  font-size: 48rpx;
  margin-bottom: 4em;
}
.c_content{
      font-size: 36rpx;
    line-height: 1.8em;
    text-indent: 2em;
    margin-top: .8em;
    color: #212832;
}
.nl_gd,.buy_next{
  font-size: 35rpx;
  margin: 50rpx 32rpx;
  margin-bottom: 110rpx;
  height: 80rpx;
  color:#fff;
 background:linear-gradient(to right,#219FFF,#55B5FF);
 line-height: 80rpx;
 text-align: center

}
.hot_foot {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  font-size: 22rpx;
  color: #49505a;
  border: 1px solid rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.hot_foot image {
  width: 50rpx;
  height: 50rpx;
}

.hot_foot .foot_left {
  /* background: red; */
  height: 100%;
  width: 30%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.hot_foot .foot_right {
  /* background: blue; */
  height: 100%;
  width: 30%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  text-align: center;
}
.foot_center {
  background: linear-gradient(to bottom,#219FFF,#55B5FF);
  line-height:110rpx;
  height: 100%;
  width: 40%;
  text-align: center;
  color:#fff;
  font-size: 30rpx;
  overflow: hidden;
}
.by_title{
  color: #b1b1b1;
    font-size: 32rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
}
.f_info{
        font-size: 28rpx;
    width: 400rpx;
    margin: 5% auto 0px;
    
}
.buy_info,.buy_rate,.buy_auto .checkbox{
  display: flex;
  margin-top: 28rpx;
}
.buy_auto .checkbox{
  justify-content: space-between;
  overflow: hidden;
}
.buy_auto .checkbox checkbox{
  zoom:80%;
}
.buy_str{
  margin-top: 30%;
}
