.dt_list{
  margin-bottom:82rpx;
}
.wz_set {
  overflow: hidden;
  white-space: nowrap;
  -o-text-overflow: ellipsis;
  text-overflow: ellipsis;
  word-break: break-all;
  word-wrap: normal;
}

.list_text {
  padding: 0 32rpx;
  color: rgb(33, 40, 50);
  line-height: 112rpx;
  font-size: 32rpx;
}

.list-bor {
  border-bottom: 1px solid rgb(222, 224, 226);
  position: relative;
  display: flex;
  align-items: center;
}

.hot_foot {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 88rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  color: #49505a;
  border: 1px solid rgba(0, 0, 0, 0.1);
}

.hot_foot image {
  width: 50rpx;
  height: 50rpx;
}

.hot_foot .foot_left {
  /* background: red; */
  height: 100%;
  width: 30%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.hot_foot .foot_right {
  /* background: blue; */
  height: 100%;
  width: 30%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  text-align: center;
}

.foot_center {
  background: linear-gradient(to bottom, #219fff, #55b5ff);
  line-height: 88rpx;
  height: 100%;
  width: 40%;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  position: relative;
}

.dir_num {
  margin: 0 32rpx;
  color: #999;
  line-height: 90rpx;
  font-size: 30rpx;
  border-bottom: 1px solid rgba(0,0,0,.1)
}
.s_list{
  position: fixed;
  bottom:90rpx;
  width: 40%;
  background: #fff;
  left: 50%;
  transform: translateX(-50%);
  overflow: scroll;
   max-height: 600rpx;
   z-index: 100;
}
.s_list>view{
  line-height: 80rpx;
  padding-left: 32rpx;
  border-bottom: 1px solid rgba(0,0,0,1);
  overflow: hidden;
}
.picker{
  font-size: 35rpx;
}
