.list {
  margin-bottom: 110rpx;
}

.list_name {
  margin-top: 16rpx;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  color: #858c96;
  font-size: 28rpx;
  text-align: center;
}

.list_name view {
  width: 25%;
  box-sizing: border-box;
  padding: 16rpx 8rpx;
}


.link_content {
  margin-bottom: 30rpx;
  padding: 24rpx 32rpx;
}
.link_nav{
    display: flex;
  flex-direction: row;
}

.link_content image {
  width: 100%;
  height: 100%;
}

.link_content:active {
  background: #f8f9fa;
}

.con_box {
  margin-top: 40rpx;
}

.content_left {
  background: skyblue;
  height: 184rpx;
  width: 128rpx;
  overflow: hidden;
}

.content_left>img {
  width: 100%;
  height: 100%;
}

.content_right {
  padding-left: 30rpx;
  display: flex;
  flex-direction: column;
  max-width: 600rpx;
}

.content_right .right_name {
  font-size: 34rpx;
  color: #212832;
  margin-bottom: 4rpx;
}

.content_right .right_zuo {
  font-size: 28rpx;
  color: #49505a;
  height: 44rpx;
  line-height: 40rpx;
  margin-bottom: 6rpx;
}

.content_right .right_f {
  font-size: 28rpx;
  color: #717882;
}

